<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/One"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="275dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="275dp"
        android:layout_weight="1"
        android:onClick="startVersionOne"
        android:text="@string/version_one"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Two"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="275dp"
        android:layout_marginEnd="300dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="275dp"
        android:onClick="startVersionTwo"
        android:text="@string/version_two"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/One"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Three"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:onClick="startVersionThree"
        android:text="@string/version_three"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GIFS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="492dp"
        android:layout_marginEnd="274dp"
        android:layout_marginStart="540dp"
        android:onClick="startVersionGIFS"
        android:text="Animation and grid"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Dragging"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Dragging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="171dp"
        android:layout_marginTop="121dp"
        android:onClick="startDragging"
        android:text="@string/dragging"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GIFS"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
