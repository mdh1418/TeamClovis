<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/paper"
        android:layout_width="680dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/paper">


    </RelativeLayout>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingRight="50dp">

            <ImageButton
                android:id="@+id/letter_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/letter_a" />

            <ImageButton
                android:id="@+id/letter_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/letter_b" />

            <Button
                android:id="@+id/letter_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c" />

            <Button
                android:id="@+id/button_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d" />

            <Button
                android:id="@+id/button_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e" />

            <Button
                android:id="@+id/button_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f" />

            <Button
                android:id="@+id/button_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="g" />

            <Button
                android:id="@+id/button_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="h" />

            <Button
                android:id="@+id/button_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="i" />

            <Button
                android:id="@+id/button_j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="j" />

            <Button
                android:id="@+id/button_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="k" />

            <Button
                android:id="@+id/button_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="l" />

            <Button
                android:id="@+id/button_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="m" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingRight="50dp">

            <ImageButton
                android:id="@+id/letter_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/letter_n" />

            <ImageButton
                android:id="@+id/button_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/letter_o" />

            <Button
                android:id="@+id/button_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="p" />

            <Button
                android:id="@+id/button_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="q" />

            <Button
                android:id="@+id/button_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="r" />

            <Button
                android:id="@+id/button_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="s" />

            <Button
                android:id="@+id/button_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="t" />

            <Button
                android:id="@+id/button_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="u" />

            <Button
                android:id="@+id/button_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v" />

            <Button
                android:id="@+id/button_w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="w" />

            <Button
                android:id="@+id/button_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x" />

            <Button
                android:id="@+id/button_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="y" />

            <Button
                android:id="@+id/button_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="z" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>